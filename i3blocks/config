# Memory
[memory]
command=scripts/memory
label=MEM 
interval=30
color=#F09020


# Guess the weather hourly
[weather]
label=󰖐 
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=3600


# cpu_usage
[cpu_usage]
